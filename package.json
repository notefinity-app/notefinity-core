{
  "name": "@notefinity/core",
  "version": "1.3.1",
  "description": "Open source core of Notefinity",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "npm run build:server && npm run build:copy-client",
    "build:server": "vite build",
    "build:copy-client": "if [ -d '../main/dist/client' ]; then cp -r ../main/dist/client ./client-dist; else echo 'Client dist not found. Run npm run build in main project first.'; fi",
    "build:full": "cd ../main && npm run build && cd ../core && npm run build",
    "test": "vitest run --coverage",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "dev": "npm run build:server && NODE_ENV=development SKIP_AUTH=true node dist/index.js",
    "dev:no-auth": "npm run build:server && NODE_ENV=development SKIP_AUTH=true node dist/index.js",
    "dev:watch": "vite build --watch & NODE_ENV=development SKIP_AUTH=true nodemon dist/index.js",
    "start": "node dist/index.js",
    "clean": "rm -rf dist coverage client-dist",
    "lint": "eslint src/**/*.ts",
    "type-check": "tsc --noEmit",
    "release": "node ../scripts/release.js",
    "release:status": "node ../scripts/release.js status",
    "release:patch-core": "node ../scripts/release.js patch-core",
    "release:patch-main": "node ../scripts/release.js patch-main",
    "release:minor-core": "node ../scripts/release.js minor-core",
    "release:minor-main": "node ../scripts/release.js minor-main",
    "release:minor-both": "node ../scripts/release.js minor-both",
    "release:major-both": "node ../scripts/release.js major-both",
    "release:finalize": "node ../scripts/finalize.js",
    "test:unit": "vitest run --coverage --reporter=verbose",
    "test:ci": "vitest run --coverage --reporter=json --reporter=verbose",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md,yml,yaml}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md,yml,yaml}\"",
    "precommit": "npm run format:check && npm run lint && npm run type-check",
    "format:list": "prettier --list-different \"**/*.{ts,tsx,js,jsx,json,md,yml,yaml}\"",
    "format:check-verbose": "echo 'Checking formatting for all TypeScript, JavaScript, JSON, Markdown, and YAML files...' && prettier --check --debug-check \"**/*.{ts,tsx,js,jsx,json,md,yml,yaml}\"",
    "deploy:caprover": "./self-hosting/caprover/deploy-caprover.sh",
    "docker:build": "docker build -t notefinity-core .",
    "docker:run": "docker run -p 3000:3000 --env-file .env notefinity-core"
  },
  "keywords": [
    "notes",
    "productivity",
    "open-source"
  ],
  "author": "Notefinity Team",
  "license": "AGPL-3.0-or-later",
  "repository": {
    "type": "git",
    "url": "https://github.com/notefinity-app/notefinity-core.git"
  },
  "homepage": "https://github.com/notefinity-app/notefinity-core#readme",
  "bugs": {
    "url": "https://github.com/notefinity-app/notefinity-core/issues"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.1",
    "helmet": "^7.2.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "nano": "^10.1.4"
  },
  "devDependencies": {
    "@eslint/js": "9.37.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.23",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "24.7.0",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "8.45.0",
    "@typescript-eslint/parser": "8.45.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "eslint": "9.37.0",
    "nodemon": "3.1.10",
    "prettier": "^3.3.3",
    "supertest": "^7.1.4",
    "typescript": "^5.6.3",
    "undici-types": "^7.14.0",
    "vite": "7.1.9",
    "vite-plugin-dts": "4.5.4",
    "vitest": "3.2.4"
  },
  "engines": {
    "node": "^20.19.0 || >=22.12.0",
    "npm": ">=10.8.2"
  }
}
