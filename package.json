{
  "name": "@notefinity/core",
  "version": "1.0.2",
  "description": "Open source core of Notefinity",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "tsc && node dist/server.js",
    "dev:watch": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,md}\"",
    "clean": "rm -rf dist",
    "audit": "npm audit --audit-level=moderate",
    "audit:fix": "npm audit fix",
    "security:check": "npm run audit && npm outdated",
    "deps:update": "npm update && npm audit"
  },
  "keywords": [
    "notes",
    "productivity",
    "open-source"
  ],
  "author": "Notefinity Team",
  "license": "AGPL-3.0-or-later",
  "repository": {
    "type": "git",
    "url": "https://github.com/notefinity-app/notefinity-core.git"
  },
  "homepage": "https://github.com/notefinity-app/notefinity-core#readme",
  "bugs": {
    "url": "https://github.com/notefinity-app/notefinity-core/issues"
  },
  "dependencies": {
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "nano": "^10.1.3",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "joi": "^17.11.0"
  },
  "devDependencies": {
    "@types/node": "20.16.11",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@vitest/coverage-v8": "3.2.4",
    "@vitest/ui": "3.2.4",
    "prettier": "3.3.3",
    "typescript": "5.6.3",
    "vitest": "3.2.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
